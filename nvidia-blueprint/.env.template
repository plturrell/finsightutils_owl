# Production environment template (copy to .env and fill in your own values)

# SAP HANA Connection
SAP_HANA_HOST=your-sap-instance.hana.cloud.ondemand.com
SAP_HANA_PORT=443
SAP_HANA_USER=YOUR_USERNAME
SAP_HANA_PASSWORD=YOUR_PASSWORD
SAP_ENABLE_COMPRESSION=true
SAP_CONNECTION_POOL_SIZE=10
SAP_CONNECTION_TIMEOUT=30

# SAP HANA Knowledge Engine
SAP_KE_WORKSPACE=OWL_WORKSPACE
SAP_KE_INFERENCE_LEVEL=standard  # basic, standard, advanced
SAP_KE_USE_CACHE=true
SAP_KE_CACHE_TTL=3600
SAP_KE_BATCH_SIZE=1000
SAP_KE_ENABLE_SPARQL_ENDPOINT=true
SAP_KE_GRAPH_PREFIX=owl_

# API Configuration
ENVIRONMENT=production
API_HOST=0.0.0.0
API_PORT=8000
MAX_UPLOAD_SIZE=104857600  # 100MB
BASE_URI=http://localhost:8000/
INCLUDE_PROVENANCE=true
LOG_LEVEL=INFO
LOG_FORMAT=json
CORS_ORIGINS=*

# Redis Configuration
REDIS_URL=redis://redis:6379/0
REDIS_PASSWORD=<generated-secure-password>

# Security
SECRET_KEY=<generated-secure-key>

# GPU Configuration
USE_GPU=true
GPU_DEVICE_ID=0
GPU_MEMORY_LIMIT=0
TF32_OVERRIDE=1
NVIDIA_TF32_OVERRIDE=1
DOCUMENT_BATCH_SIZE=16
NER_BATCH_SIZE=32
INFERENCE_BATCH_SIZE=64
GPU_MEMORY_FRACTION=0.8
CUDA_LAUNCH_BLOCKING=0
CUDA_MODULE_LOADING=LAZY
CUDNN_BENCHMARK=true
ENABLE_AMP=true

# Worker Configuration
WORKER_CONCURRENCY=2
WORKER_MAX_TASKS_PER_CHILD=100

# Monitoring
GRAFANA_USER=admin
GRAFANA_PASSWORD=<generated-secure-password>

# DCGM Exporter
DCGM_EXPORTER_COLLECTORS=dcp,health,nvswitch,nvlink,topo
DCGM_EXPORTER_INTERVAL=1000
DCGM_EXPORTER_KUBERNETES=false